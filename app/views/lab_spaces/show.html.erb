<div class="LabDetail">
  <%= link_to '&larr; Regresar a los resultados'.html_safe, lab_spaces_path %>
  <%
    caps = @capabilities.map { |c| {"text" => c.name, "value" => c.id} }
    mats = @materials.map { |c| {"text" => c.name, "value" => c.id} }
  %>

  <p class="m-0 mt-5 entitytag"><strong><small>Espacio</small></strong></p>
  <h1 class="mt-0 displayInBlock"><%= @lab_space.name %></h1> <%= link_to 'Editar', edit_admin_lab_space_path(@lab_space), class: 'btn highlight small editMoveBtn' if policy(@lab_space).update? %>
  <div class="clearfix"></div>
  <div class="row d-flex justify-content-end">
  </div>
  <p id="notice" class="m-0"><%= notice %></p>
  <section class="Overview">
    <div class="row">
      <div class="col">
        <section class="Detalles">
          <h2 class="mb-3"></h2>
          <div class="section-body">
            <div class="row">
              <div class="col-3"><strong>Responsable:</strong></div>
              <div class="col"><p class="mb-1"><%= @lab_space.contact_email %></p></div>
            </div>
            <div class="row">
              <div class="col-3"><strong>Teléfono:</strong></div>
              <div class="col"><p class="mb-1"><%= @lab_space.contact_phone %></p></div>
            </div>
            <div class="row">
              <div class="col-3"><strong>Ubicación:</strong></div>
              <div class="col"><p class="mb-1"><%= @lab_space.location %></p></div>
            </div>
            <div class="row">
              <div class="col">
                <p><%= @lab_space.description %></p>
              </div>
            </div>
          </div>
        </section>
      </div>
      <div class="col offset-1">
        <div class="row">
          <section class="Horarios">
            <h2>Horarios</h2>
            <p> <%= @lab_space.hours %> </p>
          </section>
        </div>
        <div class="row hidden">
          <section class="Mapa">
            <h2>Mapa</h2>
            <h1 style="color: red"> </h1>
          </section>
        </div>
      </div>
    </div>
  </section>
  <section class="Equipos">
    <h2 class="displayInBlock">Equipos</h2>
    <%= link_to 'Crear Equipo', new_admin_equipment_path, class: 'btn highlight small' if policy(Equipment.new).new?%>
    <div class="EquipoGrid">
      <div class="row">
        <%= render "lab_space_equipment_tables" %>
      </div>
    </div>
  </section>
</div>
