<div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true" style="display: none">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="detailModalLabel">Detalles de Reservación</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row pl-3 mb-3">
          <%= inline_svg_tag "calendar.svg", class: 'text-primary mt-1 mr-1', size: '1.3em' %>
          <p id="detailDateField" class="ml-2 mb-0"></p>
        </div>
        <div class="row pl-3 mb-3">
          <%= inline_svg_tag "person.svg", class: 'text-secondary mt-0 mr-1', size: '1.5em' %>
          <p id="detailUserField" class="ml-2 mb-0"></p>
        </div>
        <div class="row pl-3 mb-3">
          <p class="mb-0 mr-1" id="statusIcon"></p>
          <p id="detailStatusField" class="ml-2 mb-0" data-toggle="popover" data-content="x"></p>
        </div>
        <div class="row pl-3 mb-3">
          <%= inline_svg_tag "tag.svg", class: 'text-info mt-1 mr-1', size: '1.35em' %>
          <p id="detailPurposeField" class="ml-2 mb-0"></p>
        </div>
        <div class="row pl-3 mb-3">
          <%= inline_svg_tag "message.svg", class: 'text-primary mt-1 mr-1', id: 'commentIcon', size: '1.15em' %>
          <p id="detailCommentField" class="ml-2 mb-0"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button id="cancelBtn" type="button" class="btn btn-outline-primary" style="display: none">Cancelar Reservación</button>
        <button id="rejectBtn" type="button" class="btn btn-outline-danger" style="display: none">Rechazar</button>
        <button id="acceptBtn" type="button" class="btn btn-success" style="display: none">Confirmar</button>
      </div>
    </div>
  </div>
</div>