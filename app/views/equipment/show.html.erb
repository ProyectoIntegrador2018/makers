<%
  def reservation_title(res)
    if user_signed_in? && current_user.id == res.user_id
      title = "#{current_user.given_name} #{current_user.last_name}"
      if res.status == 'pending'
        title += ' (pendiente)'
      elsif res.status == 'blocked'
        title +=  ' (bloqueado)'
      end
      return title
    else
      return 'Reservación'
    end
  end

  def reservation_opacity(reservation_status)
    case reservation_status
    when 'confirmed'
      ' .75)'
    when 'pending'
      ' .25)'
    end
  end

  def reservation_color(reservation_purpose, reservation_status)
    if reservation_status == 'blocked'
      puts "This sould be blocked"
      ' #7B7B7B '
    else
      case reservation_purpose
      when 'academic'
        'rgba(220, 57, 18,' + reservation_opacity(reservation_status)
      when 'entrepreneurship'
        'rgba(255, 153, 0,' + reservation_opacity(reservation_status)
      when 'research'
        'rgba(16, 150, 24,' + reservation_opacity(reservation_status)
      when 'personal'
        'rgba(153, 0, 153,' + reservation_opacity(reservation_status)
      end
    end
  end

  def reservation_text(reservation_purpose)
    case reservation_purpose
    when 'confirmed'
      '#fefefe'
    when 'pending'
      '#000000'
    when 'blocked'
      '#000000'
    end
  end

  available_hours = @equipment.available_hours

  reservations = []
  res = @equipment.reservations
  viable_reservations = res.confirmed.or(res.blocked).or(res.pending)

  res = viable_reservations.select do |reservation|
    (reservation.status == 'pending') ? (reservation.user == current_user) : true
  end

  res.each do | r |
    res_title = reservation_title(r)
    res_color = reservation_color(r.purpose, r.status)
    txt_color = reservation_text(r.status)
    reservations.push({
      "id" => r.id,
      "start" => r.start_time,
      "end" => r.end_time,
      "title" => res_title,
      "color" => res_color,
      "isUser" => (user_signed_in? and current_user.id == r.user_id),
      "textColor" => txt_color
    })
  end
%>
<div class="LabDetail EquipmentDetail">
