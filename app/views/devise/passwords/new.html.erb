<div class="devise">
	<h2>&iquest;Olvidaste tu contraseña?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="field has-ico email-container">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: raw('Correo electr&oacute;nico'), class: 'email txt-input' %>
      </div>

	  <div class="actions">
	  	<%= f.submit raw("Env&iacute;ame instrucciones para restablecer contraseña"), class: 'submit highlight btn' %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
