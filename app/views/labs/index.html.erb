<main class="LaboratoriosList">
  <div class="container">
    <h1>Laboratorios</h1>

    <p id="notice"><%= notice %></p>
    <div class="row d-flex justify-content-end">
      <%= link_to '+ Nuevo laboratorio', new_lab_path, class: 'btn highlight small', id: 'newlabbtn' %>
    </div>

    <section class="searchBar">
      <input type="search" name="q" id="query" placeholder="Buscar..." class="txtinput">
    </section>
    <section class="labList">
      <% if !@labs.blank? %>
        <% @labs.each do |lab| %>
          <article class="labEntry">
            <div class="row">
              <div class="col-10">
                <div class="container">
                  <div class="row pl-3">
                    <h2 class="title"><%= lab.name %></h2>
                    <ul class="taglist">
                      <li><div class="pill gray small">aluminio</div></li>
                      <li><div class="pill gray small">pl&aacute;stico</div></li>
                      <li><div class="pill gray small">madera</div></li>
                    </ul>
                  </div>
                  <div class="row no-gutters semibold">
                    <div class="col-2 pl-1">
                      <p class="location"><%= lab.location %></p>
                    </div>
                    <div class="col-3">
                      <p class="horarios"><%=  (defined? lab.horario) ? lab.horario : "HORARIO" %></p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-2">
                <%= link_to 'Ver detalles', lab, class: 'btn border hl small lp' %>
              </div>
            </div>
          </article>
        <% end %>
      <% else %>
        <p class="tac">No labs found</p>
      <% end %>
    </section>
  </div>
</main>