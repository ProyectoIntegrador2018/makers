{
	"options": {
		"merge-default-rules": false,
	},
	"files": {
		"include": "resources/**/*.s+(a|c)ss",
		"ignore": [
			"vendor/**/*.*",
			"node_modules/**/*.*"
		]
	},
	"rules": {
		"brace-style": [2, {"style": "stroustrup", "allow-single-line": true}],
		"class-name-format": [0, {"convention": "hyphenatedlowercase", "convention-explanation": "Your classes should be lower-case-hyphenated"}],
		"extends-before-mixins": 2,
		"extends-before-declarations": 2,
		"declarations-before-nesting": 2,
		"hex-notation": [1, {"style": "lowercase"}],
		"hex-length": 1,
		"placeholder-in-extend": 2,
		"mixins-before-declarations": [
			2,
			{
				"exclude": [
					"breakpoint",
					"mq"
				]
			}
		],
		"nesting-depth": [1, {"max-depth": 3}],
		"no-warn": 1,
		"no-empty-rulesets": 1,
		"no-debug": 1,
		"no-ids": 1,
		"no-mergeable-selectors": 2,
		"pseudo-element": 1,
		"shorthand-values": 1,
		"space-before-brace": 2,
		"space-after-colon": 2,
		"indentation": [
			2,
		],
		"property-sort-order": [
			1,
			{
				"order": "smaccs",
				"ignore-custom-properties": true
			}
		],
		"zero-unit": [2, {"include": false}]
	}
}
